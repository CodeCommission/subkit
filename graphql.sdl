type Item {
  id: ID!
  email: String
}

# Root queries
type  Query {
  # Item by ID
  item(id: ID!): Item
  # All items
  items(take: Int, skip: Int): [Item]
}

input ItemInput {
  id: ID!
  email: String
}

type Mutation {
  upsertItem(input: ItemInput!): Item
}

type Subscription {
  onItemUpserted: Item
}